@model LetsDisc.Web.Models.Questions.EditQuestionViewModel

@{
    ViewData["Title"] = "Edit";
}

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Questions/Edit.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Questions/Edit.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("EditQuestion")
                </h2>
                <a class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right questions-id" asp-action="Index">
                    <i class="material-icons">list</i>
                </a>
            </div>
            <div class="body table-responsive">
                <form id="QuestionEditForm" class="question-create-form">
                    <input type="hidden" name="Id" value="@Model.Question.Id" />
                    <div class="form-group">
                        <label class="question-create-title-lbl" for="Title">@L("Title")</label>
                        <input type="text" name="Title" class="question-create-title-txt form-control" value="@Model.Question.Title" placeholder="@L("WhatsYourQuestion")" required maxlength="64">
                    </div>

                    <div class="form-group">
                        <div class="wmd-panel">
                            <div id="wmd-button-bar"></div>
                            <label for="answer_question_body" class="required"></label>
                            <textarea name="Body" class="wmd-input" id="ask_question_body">@Model.Question.Body</textarea>
                        </div>
                        <div id="wmd-preview" class="wmd-panel wmd-preview"></div>
                    </div>

                    <button type="submit" class="btn btn-default">@L("Save")</button>
                </form>
            </div>
        </div>
    </div>
</div>
